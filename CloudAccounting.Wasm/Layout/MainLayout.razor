@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => _drawerOpen = !_drawerOpen)" />
            <RadzenLabel Text="Cloud Accounting" />
        </RadzenStack>
    </RadzenHeader>

    <RadzenSidebar @bind-Expanded="_drawerOpen" Style="width:300px">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />

            <RadzenPanelMenuItem Text="Setup" Icon="build">
                <RadzenPanelMenuItem Text="Company" Icon="person" Path="/Pages/Company/CompaniesListPage" />
                <RadzenPanelMenuItem Text="Fiscal Year" Icon="date_range" Path="/Pages/FiscalYear/ManageFiscalYears" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

<RadzenComponents />


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
